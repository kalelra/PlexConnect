<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/scrobble.js)}}" />
  </head>
  
  <body>
<scroller id="Show_Grid" volatile="true" onVolatileReload="atv.loadAndSwapURL('{{URL(:::PlexConnect=TVShow_Episode_Grid_Fanart)}}')">
      <!--Banner--> 
      <header>
        <imageHeader>
           <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=590|1080=800)}}, 0" required="true">
            {{BACKGROUNDURL(art:)}}
           </image>
        </imageHeader>
      </header>
     
      <items>
        <grid columnCount="4" id="grid_0">
          <items>
            <fourByThreePoster id="{{VAL(key)}}" featured="true" alwaysShowTitles="true"
                             onPlay="atv.loadURL('{{URL(:::PlexConnect=Play_Video&amp;PlexConnectRatingKey={{VAL(ratingKey)}}&amp;PlexConnectPlayType=Continuous)}}')"
                                         onSelect="atv.loadURL('{{URL(key:::PlexConnect=TVShow_PrePlay{{VAL($tvshowfanart::Hide=|Show=_Fanart)}})}}')"
                                         onHoldSelect="scrobbleMenu('{{URL(key:::PlexConnect=Scrobble_MenuVideo)}}')">
                 {{COPY(Video)}}
                 <title>{{VAL(index)}}. {{VAL(title)}}</title>
                 
                 <image>{{IMAGEURL(thumb::384)}}</image>
                 <defaultImage>resource://16x9.png</defaultImage>
                 
            </fourByThreePoster>
            </items>
         </grid>
         </items>
    </scroller>
  </body>
</atv>
