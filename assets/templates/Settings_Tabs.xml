<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
    <listWithPreview id="SettingsPage_VideoOSD">
      <header>
        <simpleHeader>
          <title>{{TEXT(Settings)}}</title>
        </simpleHeader>
      </header>
      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary/>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
            <label>Baa, roidy</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexconnect</label>
            <label>http://forums.plexapp.com/...plexconnect</label>
          </metadataValues>
          <image>{{URL(:/thumbnails/PlexConnectLogo.jpg)}}</image>
        </keyedPreview>
      </preview>

      <menu>
        <sections>
        <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Active Tabs)}}</title>
              </horizontalDivider>
            </header>
            <items>
           <!-- <oneLineMenuItem id="StartTab" onSelect="toggleSettings('StartTab', 'Settings')">
                <label>{{TEXT(Default Tab)}}</label>
                <rightLabel>{{SETTING(starttab)}}</rightLabel>
              </oneLineMenuItem> -->
               <oneLineMenuItem id="ShowPlayLists" onSelect="toggleSettings('ShowPlayLists', 'Settings_Tabs')">
                <label>{{TEXT(Playlists Tab)}}</label>
                <rightLabel>{{SETTING(showplaylists)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowLibrary" onSelect="toggleSettings('ShowLibrary', 'Settings_Tabs')">
                <label>{{TEXT(Library Tab)}}</label>
                <rightLabel>{{SETTING(showlibrary)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowChannels" onSelect="toggleSettings('ShowChannels', 'Settings_Tabs')">
                <label>{{TEXT(Channels Tab)}}</label>
                <rightLabel>{{SETTING(showchannels)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowSharedLibrarys" onSelect="toggleSettings('ShowSharedLibrarys', 'Settings_Tabs')">
                <label>{{TEXT(Shared Library Tab)}}</label>
                <rightLabel>{{SETTING(showsharedlibrarys)}}</rightLabel>
              </oneLineMenuItem>
              </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>
