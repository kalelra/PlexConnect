<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
    <listWithPreview id="Settings_View">
     <header>
        <simpleHeader>
          <title>{{TEXT(Settings)}}</title>
        </simpleHeader>
      </header>
      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary>PlexConnect is a simple way to bring the Plex Client to the Apple TV.</summary>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
            <label>Baa, roidy</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexconnect</label>
            <label>http://forums.plexapp.com/...plexconnect</label>
          </metadataValues>
          <image>{{URL(:/thumbnails/PlexConnectLogo.png)}}</image>
        </keyedPreview>
      </preview>

      <menu>
        <sections>
        <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Library)}}</title>
              </horizontalDivider>
            </header>
            <items>
            <oneLineMenuItem id="LibraryView" onSelect="toggleSettings('LibraryView', 'Settings_View')">
                <label>{{TEXT(Library View)}}</label>
                <rightLabel>{{SETTING(libraryview)}}</rightLabel>
              </oneLineMenuItem>
              </items>
          </menuSection>
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Movies)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="MovieView" onSelect="toggleSettings('MovieView', 'Settings_View')">
                <label>{{TEXT(Movie View)}}</label>
                <rightLabel>{{SETTING(movieview)}}</rightLabel>
              </oneLineMenuItem>
               <oneLineMenuItem id="Movies_NavBar_OnDeck" onSelect="toggleSettings('Movies_NavBar_OnDeck', 'Settings_View')">
                <label>{{TEXT(On Deck)}}</label>
                <rightLabel>{{SETTING(movies_navbar_ondeck)}}</rightLabel>
              </oneLineMenuItem>
                <oneLineMenuItem id="ShowTitles_Movies" onSelect="toggleSettings('ShowTitles_Movies', 'Settings_View')">
                <label>{{TEXT(Poster Titles)}}</label>
                <rightLabel>{{SETTING(showtitles_movies)}}</rightLabel>
              </oneLineMenuItem>
            </items>
          </menuSection>
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(TV Shows)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="ShowView" onSelect="toggleSettings('ShowView', 'Settings_View')">
                <label>{{TEXT(TV Show View)}}</label>
                <rightLabel>{{SETTING(showview)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="SeasonView" onSelect="toggleSettings('SeasonView', 'Settings_View')">
                <label>{{TEXT(Season View)}}</label>
                <rightLabel>{{SETTING(seasonview)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="EpisodeView" onSelect="toggleSettings('EpisodeView', 'Settings_View')">
                <label>{{TEXT(Episode View)}}</label>
                <rightLabel>{{SETTING(episodeView)}}</rightLabel>
              </oneLineMenuItem>       
              <oneLineMenuItem id="TV_NavBar_OnDeck" onSelect="toggleSettings('TV_NavBar_OnDeck', 'Settings_View')">
               <label>{{TEXT(On Deck)}}</label>
                <rightLabel>{{SETTING(tv_navbar_ondeck)}}</rightLabel>
              </oneLineMenuItem>
             <oneLineMenuItem id="ShowTitles_TVShows" onSelect="toggleSettings('ShowTitles_TVShows', 'Settings_View')">
                <label>{{TEXT(Poster Titles)}}</label>
                <rightLabel>{{SETTING(showtitles_tvshows)}}</rightLabel>
              </oneLineMenuItem>
                <oneLineMenuItem id="ShowUnwatched" onSelect="toggleSettings('ShowUnwatched', 'Settings_View')">
                <label>{{TEXT(Unwatched Count)}}</label>
                <rightLabel>{{SETTING(showunwatched)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowSynopsis" onSelect="toggleSettings('ShowSynopsis', 'Settings_View')">
                <label>{{TEXT(Unwatched Synopsis)}}</label>
                <rightLabel>{{SETTING(showsynopsis)}}</rightLabel>
              </oneLineMenuItem>
               </items>
          </menuSection>
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Home Video)}}</title>
              </horizontalDivider>
            </header>
            <items>
               <oneLineMenuItem id="HomeVideoView" onSelect="toggleSettings('HomeVideoView', 'Settings_View')">
                <label>{{TEXT(Home Video View)}}</label>
                <rightLabel>{{SETTING(homevideoview)}}</rightLabel>
              </oneLineMenuItem>
             <oneLineMenuItem id="HomeVideos_NavBar_OnDeck" onSelect="toggleSettings('HomeVideos_NavBar_OnDeck', 'Settings_View')">
                <label>{{TEXT(On Deck)}}</label>
                <rightLabel>{{SETTING(homevideos_navbar_ondeck)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowTitles_HomeVideos" onSelect="toggleSettings('ShowTitles_HomeVideos', 'Settings_View')">
                <label>{{TEXT(Poster Titles)}}</label>
                <rightLabel>{{SETTING(showtitles_homevideos)}}</rightLabel>
              </oneLineMenuItem>
            </items>
          </menuSection>
         <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Channels)}}</title>
              </horizontalDivider>
            </header>
            <items>
            <oneLineMenuItem id="ChannelView" onSelect="toggleSettings('ChannelView', 'Settings_View')">
                <label>{{TEXT(Channel View)}}</label>
                <rightLabel>{{SETTING(channelview)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowTitles_Channels" onSelect="toggleSettings('ShowTitles_Channels', 'Settings_View')">
                <label>{{TEXT(Poster Titles)}}</label>
                <rightLabel>{{SETTING(showtitles_channels)}}</rightLabel>
              </oneLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>
