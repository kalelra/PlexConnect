<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/scrobble.js)}}" />
  </head>
  
  <body>
<scroller id="Show_Grid" volatile="true" onVolatileReload="atv.loadAndSwapURL('{{URL(:::PlexConnect=TVShow_Episode_Grid)}}')">
      <header>
      <simpleHeader>
          <title>{{VAL(title1)}}</title>
          <subtitle>{{VAL(title2)}}</subtitle>
        </simpleHeader>
      </header>
     
      <items>
               <pagedGrid id="paged-grid-0">

<!--          <grid columnCount="15" id="grid_0">
             <items>-->
               <fourByThreePoster id="{{VAL(ratingKey)}}" alwaysShowTitles="true"
                                         onPlay="atv.loadURL('{{URL(:::PlexConnect=Play_Video&amp;PlexConnectRatingKey={{VAL(ratingKey)}}&amp;PlexConnectPlayType=Continuous)}}')"
                                         onSelect="atv.loadURL('{{URL(key:::PlexConnect=TVShow_PrePlay{{VAL($tvshowfanart::Hide=|Show=_Fanart)}})}}')"
                                         onHoldSelect="scrobbleMenu('{{URL(key:::PlexConnect=Scrobble_MenuVideo)}}')">
                 {{PAGEDCOPY(Video,4,2)}}
                 <title>{{VAL(title)}}</title>
                 <subtitle>{{VAL(originallyAvailableAt)}}</subtitle>
                 <image>{{IMAGEURL(thumb::384)}}</image>
                 <defaultImage>resource://Poster.png</defaultImage>
               </fourByThreePoster>
<!--             </items>
           </grid>-->
        
         </pagedGrid>
         </items>
    </scroller>
  </body>
</atv>