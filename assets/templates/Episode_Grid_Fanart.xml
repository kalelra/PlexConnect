<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/scrobble.js)}}" />
  </head>
  
  <body>
<scroller id="Show_Grid" volatile="true" onVolatileReload="atv.loadAndSwapURL('{{URL()}}')">
      <header>
        <imageHeader>
           <image insets="{{VAL(^aTVScreenResolution:1:720=-270|1080=-134)}}, 0, {{VAL(^aTVScreenResolution:1:720=580|1080=900)}}, 0" required="true">
            {{BACKGROUNDURL(art:)}}
           </image>
        </imageHeader>
      </header>
     
      <items>
               <pagedGrid id="paged-grid-0">

<!--          <grid columnCount="15" id="grid_0">
             <items>-->
               <fourByThreePoster id="{{VAL(key)}}" featured="true" alwaysShowTitles="{{VAL($showtitles_movies::Highlighted Only=false|Show All=true)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=EpisodePrePlay')"
                             onHoldSelect="scrobbleMenu('{{URL(key)}}&amp;PlexConnect=ScrobbleMenuVideo')">
                 {{PAGEDCOPY(Video,4,2)}}
                 <title>{{VAL(title)}}</title>
                 <subtitle>{{VAL(originallyAvailableAt)}}</subtitle>
                 <image>{{IMAGEURL(thumb::384)}}</image>
                 <defaultImage>resource://Poster.png</defaultImage>
               </fourByThreePoster>
<!--             </items>
           </grid>-->
        
         </pagedGrid>
         </items>
    </scroller>
  </body>
</atv>